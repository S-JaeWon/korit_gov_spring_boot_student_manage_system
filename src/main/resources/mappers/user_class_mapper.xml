<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.student_manage_system.mapper.UserClassMapper">
    <resultMap id="UserClassResultMap" type="com.korit.student_manage_system.entity.UserClass">
        <id property="userClassId" column="stdt_cls_id" />
        <result property="userId" column="user_id" />
        <result property="classId" column="cls_id" />
        <result property="createDt" column="create_dt" />
        <result property="updateDt" column="update_dt" />
    </resultMap>

    <insert id="addUserClass" useGeneratedKeys="true" keyProperty="userClassId">
        insert into
            stdt_cls_tb
        values
            (0, #{userId}, #{classId}, now(), null);
    </insert>

    <delete id="deleteUserClass">
        delete from
            stdt_cls_tb
        where
            user_id = #{userId} and
            cls_id = #{classId};
    </delete>
</mapper>
