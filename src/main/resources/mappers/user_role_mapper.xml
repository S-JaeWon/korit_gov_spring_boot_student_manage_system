<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.student_manage_system.mapper.UserRoleMapper">
    <resultMap id="UserRoleResultMap" type="com.korit.student_manage_system.entity.UserRole">
        <id property="userRoleId" column="user_role_id" />
        <result property="userId" column="user_id" />
        <result property="roleId" column="role_id" />
        <result property="createDt" column="create_dt" />
        <result property="updateDt" column="update_dt" />
    </resultMap>

    <insert id="addUserRole">
        insert into
            user_role_tb(user_role_id, user_id, role_id, create_dt, update_dt)
        values
            (0, #{userId}, #{roleId}, now(), null);
    </insert>

    <update id="updateUserRole">
        update
            user_role_tb
        set
            role_id = #{roleId}
        where
            user_id = #{userId}
    </update>
</mapper>

